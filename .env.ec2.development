# Development environment variables for EC2 deployment
# Copy this to .env.development on your EC2 server

# Django Settings
DJANGO_SETTINGS_MODULE=bazary.settings.development
SECRET_KEY=dev-secret-key-not-for-production-use-only-change-this
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,your-ec2-public-ip

# Database Configuration (Docker Compose will handle the database)
DATABASE_URL=postgres://bazary_user:bazary_dev_password@db:5432/bazary_dev

# Redis Configuration (Docker Compose will handle Redis)
REDIS_URL=redis://redis:6379/1

# Email Configuration (development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Security Settings (development only)
CORS_ALLOW_ALL_ORIGINS=True
CSRF_TRUSTED_ORIGINS=http://localhost:8001,http://127.0.0.1:8001,http://your-ec2-public-ip:8001

# Static and Media Files
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media

# Development server port (matches docker-compose)
PORT=8000
