# Production environment variables template
# Copy this to .env.production and fill in your actual values

# Django Settings
DJANGO_SETTINGS_MODULE=config.settings.production
SECRET_KEY=your-super-secure-secret-key-change-this
DEBUG=False
ALLOWED_HOSTS=your-domain.com,your-ec2-ip-address

# Database Configuration
DATABASE_URL=postgres://bazary_user:your-secure-password@db:5432/bazary_prod
POSTGRES_PASSWORD=your-secure-postgres-password

# Redis Configuration
REDIS_URL=redis://:your-redis-password@redis:6379/0
REDIS_PASSWORD=your-secure-redis-password

# Email Configuration (example with Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password

# AWS S3 for Media Files (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-url
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# Security
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
